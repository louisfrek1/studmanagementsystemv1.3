@{
}

<form method="post">
    <div class="container">
        <div class="row border">
            <div class="col-3">
                <h4 class="display-text">Course Code:</h4>
            </div>
            <div class="col row">
                <div class="row">
                    <div>
                        <span class="span-text">Code</span>
                        <input class="input-text-size" type="type" name="Code" value="" />
                    </div>
                </div>

            </div>

        </div>
        <div class="row border">
            <div class="col-3">
                <h4 class="display-text">Course Title:</h4>
            </div>
            <div class="col row">
                <div class="row">
                    <div>
                        <span class="span-text">Title</span>
                        <input class="input-text-size" type="type" name="Title" value="" />
                    </div>
                </div>
            </div>
            <br>
        </div>
        <div class="row border">
            <div class="col-3">
                <h4 class="display-text">Course Units:</h4>
            </div>
            <div class="col row">
                <div class="col row">
                    <div class="col">
                        <div>
                            <span class="span-text">Lecture</span>
                            <input class="input-text-size" type="type" name="Lecture" value="" />
                        </div>
                    </div>
                    <div class="col">
                        <div>
                            <span class="span-text">Laboratory</span>
                            <input class="input-text-size" type="type" name="Laboratory" value="" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row border">
            <div class="col-3">
                <h4 class="display-text">Course Description:</h4>
            </div>
            <div class="col row">
                <div class="row">
                    <div>
                        <span class="span-text">Description Name</span>
                        <input class="input-text-size" type="type" name="Description" value="" />
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <br>
        <button id="" type="text" class="btn btn-primary">Submit</button>
    </div>
</form>